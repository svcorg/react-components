{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "publishConfig": {
        "directory": "dist"
      }
    },
    "bootstrap": {
      "npmClientArgs": []
    },
    "create": {
      "access": "public",
      "private": false,
      "license": "MIT"
    },
    "run": {
      "npmClient": "npm"
    }
  }
}
