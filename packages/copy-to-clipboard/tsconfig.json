{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": false,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "jsx": "react",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  },
  "exclude": [
    "node_modules",
    "types",
    "dist"
  ]
}